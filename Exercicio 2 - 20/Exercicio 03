#include "stdafx.h"

#include <string>	
#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

using namespace std;

int main()
{
	string primeiro, meio, ultimo;

	cout << "Entre com o primeiro nome: ";
	cin >> primeiro;
	cout << "Entre com o nome do meio: ";
	cin >> meio;
	cout << "Entre com o ultimo nome: ";
	cin >> ultimo;

	cout << "\n====Nome Completo====" << endl;
	cout << primeiro << " " << meio << " " << ultimo;

	cout << "\n====Nome Agenda Telefonica====" << endl;
	cout << ultimo << ", " << primeiro << " " << meio;


	return 0;
}
