#include "stdafx.h"

#include <string>	
#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

using namespace std;

int main()
{
	string atual, inverso="";

	cout << "Digite uma palavra ou frase: ";
	cin >> atual;


	for (int i = 0; i < atual.length(); i++) {
		inverso = atual[i] + inverso;

	}
	cout << inverso << endl;

	if (atual == inverso) {
		cout << "É um texto palíndromo";
	}
	else {
		cout << "NÃO é um texto palíndromo";
	}

	
	return 0;
}
