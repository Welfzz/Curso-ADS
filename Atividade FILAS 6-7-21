#include <iostream>
#include <queue>

using namespace std;

int cont;
queue<int> Fila;


	struct Fila {
		

		int senhasGeradas(int c) {
			return cont += c;
		}

    int senhasAtendidas(int c) {
      return cont -= c;

		}


	};




	int main()
	{
		struct Fila x;
    int v = 0;

		int decisao;
		do {

      cout<<endl;
			cout << "0. Sair" << endl;
			cout << "1. Gerar Senha" << endl;
			cout << "2. Realizar atendimento" << endl;

      cout << "Entre com uma operação: ";
      cin>>decisao;

      if(decisao == 0 && decisao != 0){
        cout<<"Todas as senhas devem ser atendidas antes de finalizar!!";
        
      }

			if (decisao == 1) {
				Fila.push(x.senhasGeradas(1));
        cout<<"\nSenha gerada com sucesso!\n" << endl;
        
			}
      if(decisao == 2){
        
          cout << "\nSenha atendida agora: " << (Fila.front()+v);
          Fila.push(x.senhasAtendidas(1));
          v++;
          cout<<"\nSenhas restantes: "<< cont << endl;
            
      }

		} while (decisao != 0 && cont != 0);
    cout<<"\nFim do programa!" << endl;
	}

